/* Screen Layout */
BaseScreen #header {
    width: 100%;
    height: 1;
    padding: 0 1 0 1;
}

BaseScreen #main-contents {
    width: 100%;
    height: 1fr; /* Take-up the rest of the screen */
    padding: 0 1 0 1;
}

/* ---Main Game Screen--- */
MainGameScreen #main-contents {
    layout: horizontal;
}

MainGameScreen Log {
    background: $background;
    scrollbar-visibility: hidden;
}

MainGameScreen #game-pane {
    layout: grid;
    grid-size: 1 3;
    grid-rows: 25% 40% 35%;
    padding-right: 1;
}

MainGameScreen #player-pane {
    layout: grid;
    grid-size: 1 2;
    grid-rows: 25% 75%;
    padding-left: 1;
}

/* Player Actions Handler */
PlayerActionsHandler {
    align-vertical: bottom;
    background: rgba(0, 0, 0, 0);
}

/* ---Common styles--- */
.pane-title {
    width: 100%;
    height: auto;
    content-align: center middle;
    text-style: bold;
    color: $accent;
}

.right-align {
    width: 1fr;
    align: right middle;
    content-align: right middle;
}

.full-width {
    width: 1fr;
}

.with-border {
    border: orange;
}

/* ---Header--- */
#header {
    width: 1fr;
    height: 1;
}

#header Label {
    width: 1fr;
}

/* ---Game Title--- */
#default-content {
    width: 100%;
    height: 1fr;
    align: center middle;
}

#default-content Static {
    width: 100%;
    height: auto;
    content-align: center middle;
}

#default-content #title {
    text-style: bold;
    color: $accent;
}

#default-content #divider {
    color: $foreground;
}

#default-content .other {
    text-style: italic;
    color: $foreground;
}

/* ---Game Status--- */
GameStatus ProgressBar Bar {
    width: 1fr; /* Make progress bar take full width */
}

/* ---Players Info--- */
PlayersInfo ProgressBar Bar {
    width: 1fr; /* Make progress bar take full width */
}
